---
const { totalPages, currentPage, search = '', path = '' } = Astro.props;
---

<section class="grid place-items-center">
	<div class="flex">
		{
			totalPages > 1 && (
				<>
					<>
						{currentPage > 1 ? (
							<a rel="prefetch" href={`${path}/page/${currentPage - 1}/${search}`}>
								<button tabindex="-1" class="btn min-w-[8rem] rounded-r-none border-2 border-rose-700 bg-transparent text-rose-700 hover:border-rose-700 hover:shadow-lg hover:shadow-rose-600/20">
									Previous page
								</button>
							</a>
						) : (
							<button tabindex="-1" class="btn min-w-[8rem] rounded-r-none bg-transparent hover:cursor-not-allowed hover:bg-[rgb(25,29,36)]">
								Previous page
							</button>
						)}{' '}
					</>
					<>
						{currentPage < totalPages ? (
							<a rel="prefetch" href={`${path}/page/${currentPage + 1}/${search}`}>
								<button tabindex="-1" class="btn min-w-[8rem] rounded-l-none border-2 border-rose-700 bg-transparent text-rose-700 hover:border-rose-700 hover:shadow-lg hover:shadow-rose-600/20">
									Next
								</button>
							</a>
						) : (
							<button tabindex="-1" class="btn min-w-[8rem] rounded-l-none bg-transparent hover:cursor-not-allowed hover:bg-[rgb(25,29,36)]">
								Next
							</button>
						)}
					</>
				</>
			)
		}
	</div>
</section>
