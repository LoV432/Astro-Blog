---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { BASE_URL } from '../config';

export interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description = '', image = '/logo.png' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<head>
	<!-- Global Metadata -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
	<link rel="preload" href="/rubik-vinyl.woff2" as="font" type="font/woff2" crossorigin />
	<meta name="generator" content={Astro.generator} />
	<script defer data-domain={BASE_URL} src={`https://${BASE_URL}/js/script.tagged-events.js`}></script>
	<link rel="canonical" href={canonicalURL} />

	<!-- Primary Meta Tags -->
	<title>{title}</title>
	<meta name="title" content={title} />
	<meta name="description" content={description} />
	<meta property="og:image" content={image} />
	<meta property="og:image:type" content="image/png" />
	<meta property="og:image:width" content="864" />
	<meta property="og:image:height" content="864" />
	<slot />
</head>
