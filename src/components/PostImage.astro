---
const { imageObject, classes, size, alt } = Astro.props;
import { Image } from '@astrojs/image/components';
let image: string;
let imageWH: {
	width: number;
	height: number;
};
if (Object.hasOwn(imageObject.formats, size)) {
	image = imageObject.formats[size].url;
	imageWH = {
		width: imageObject.formats[size].width,
		height: imageObject.formats[size].height
	};
} else {
	image = imageObject.url;
	imageWH = {
		width: imageObject.width,
		height: imageObject.height
	};
}
---

<Image width={imageWH.width} height={imageWH.height} src={image} format="webp" class={classes} alt={alt} />
